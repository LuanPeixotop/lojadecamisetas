  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Preço</th>
      <th>Quantidade</th>
      <th>Remover</th>
    </tr>
  </thead>
  <tbody>
    <%= render @produtos_por_nome %>
  </tbody>
</table>
<%=link_to "Criar Produto", new_produto_path%>