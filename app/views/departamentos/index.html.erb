<% if flash[:notice] %>
  <div class="alert alert-success" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>

<h1>Departamentos</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departamentos.each do |departamento| %>
      <tr>
        <td><%= departamento.nome %></td>
        <td><%= link_to 'Exibir', departamento, class: "btn btn-default" %></td>
        <td><%= link_to 'Editar', edit_departamento_path(departamento), class: "btn btn-default" %></td>
        <td><%= link_to 'Remover', departamento, method: :delete, class: "btn btn-danger", data: { confirm: "Tem certeza que deseja remover #{departamento.nome}?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Departamento', new_departamento_path %>
